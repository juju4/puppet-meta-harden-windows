{
  "variables": {
    "iso_url": "http://care.dlservice.microsoft.com/dl/download/1/4/9/149D5452-9B29-4274-B6B3-5361DBDA30BC/14393.0.161119-1705.RS1_REFRESH_SERVER_EVAL_X64FRE_EN-US.ISO",
    "iso_checksum_type": "md5",
    "iso_checksum": "70721288BBCDFE3239D8F8C0FAE55F1F"
  },
  "builders": [
    {
      "vm_name":"WindowsServer2016Packer",
      "type": "virtualbox-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "post_shutdown_delay": "10s",
      "guest_os_type": "Windows2012_64",
      "guest_additions_mode": "attach",
      "disk_size": 61440,
      "floppy_files": [
        "./Autounattend.xml",
        "./oracle-cert.cer"
      ],
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "6144"],
        ["modifyvm", "{{.Name}}", "--cpus", "4"],
        ["modifyvm", "{{.Name}}", "--vram", "32"]
      ]
    },
    {
      "vm_name":"WindowsServer2016Packer",
      "type": "vmware-iso",
      "communicator": "winrm",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "headless": false,
      "boot_wait": "2m",
      "winrm_username": "vagrant",
      "winrm_password": "vagrant",
      "winrm_timeout": "6h",
      "shutdown_command": "shutdown /s /t 10 /f /d p:4:1 /c \"Packer Shutdown\"",
      "shutdown_timeout": "15m",
      "tools_upload_flavor": "windows",
      "guest_os_type": "windows8srv-64",
      "disk_size": 61440,
      "floppy_files": [
        "./Autounattend.xml",
        "./oracle-cert.cer"
      ],
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "6144",
        "numvcpus": "4",
        "scsi0.virtualDev": "lsisas1068"
      }
    }
  ],
  "provisioners": [
    {
      "type": "windows-shell",
      "inline": [
        "cmd /c \"whoami\""
      ]
    },
    {
      "type": "file",
      "source": "../manifests/site.pp",
      "destination": "c:\\windows\\temp\\site.pp"
    },
    {
      "type": "file",
      "source": "../files/sysmonconfig-export.xml",
      "destination": "c:\\windows\\temp\\sysmonconfig-export.xml"
    },
    {
      "type": "file",
      "source": "../files/applocker.xml",
      "destination": "c:\\windows\\temp\\applocker.xml"
    },
    {
      "type": "file",
      "source": "../files/firewall.wfw",
      "destination": "c:\\windows\\temp\\firewall.wfw"
    },
    {
      "type": "powershell",
      "inline": [
        "Import-Module ServerManager",
        "Install-WindowsFeature -Name NET-Framework-Features",
        "(New-Object Net.WebClient).DownloadFile('https://downloads.puppetlabs.com/windows/puppet5/puppet-agent-5.5.0-x64.msi', \"c:\\windows\\temp\\puppet-agent-5.5.0-x64.msi\")"

      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "cmd /c \"whoami\"",
        "cmd /c \"net users\"",
        "cmd /c start /wait /B msiexec /i c:\\windows\\temp\\puppet-agent-5.5.0-x64.msi /q /L* c:\\install-puppet.log",
        "whoami",
        "set"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "winrm quickconfig -q"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet config print config"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet config print modulepath"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppetlabs-windows"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppetlabs-powershell"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppetlabs-registry"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppetlabs-dsc"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppetlabs-chocolatey"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppet-windowsfeature"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppet-windows_firewall"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppet-windows_autoupdate"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppet-windows_eventlog"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppet-msoffice"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install puppet-archive"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install kpn-local_security_policy"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install autostructure-auditpol"
      ]
    },
    {
      "type": "powershell",
      "inline": [
        "(New-Object Net.WebClient).DownloadFile('https://github.com/juju4/harden_windows_server/archive/master.tar.gz', "c:\\windows\\temp\\autostructure-harden_windows_server-HEAD.tar.gz")"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install c:\\windows\\temp\\autostructure-harden_windows_server-HEAD.tar.gz --ignore-dependencies"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install ocastle-win_service"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module install ipcrm-registry_acl"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet module list --tree"
      ]
    },
    {
      "type": "windows-shell",
      "inline": [
        "puppet apply c:\\windows\\temp\\site.pp --disable_warnings deprecations --verbose"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "keep_input_artifact": false,
      "output": "builds/windows_2016_{{.Provider}}-{{isotime \"2006-01-02\"}}.box",
      "vagrantfile_template": "vagrantfile-windows_2016.template"
    }
  ]
}
